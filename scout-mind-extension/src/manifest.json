{
  "manifest_version": 3,
  "name": "ScoutMind (SMX)",
  "description": "AI-powered web data extraction (ScoutMind Extension build).",
  "version": "0.4.0",
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ScoutMind SMX"
  },
  "options_page": "options.html",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "offscreen",
    "declarativeNetRequest" 
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
   {
     "resources": ["assets/*"],
     "matches": ["<all_urls>"]
   }
  ],
  "offscreen": {
    "reasons": ["DOM_PARSER", "USER_AGENT"],
    "justification": "To fetch and parse HTML content from target URLs for data extraction, and to ensure a consistent user agent for fetching.",
    "document_url": "offscreen.html"
  }
}
